{
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "es2017",
      "dom"
    ],
    "outDir": "build"
  },
  "include": [
    "src/**/*.ts"
  ],
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Recommended"
}